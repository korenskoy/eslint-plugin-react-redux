{
  "parser": "@babel/eslint-parser",
  "extends": "airbnb",
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "rules": {
    "func-names": 0,
    "global-require": 0,
    "prefer-destructuring": 0,
    "strict": 0,
    "max-len": [
      "error", 120]
  },
  "env": {
    "mocha": true,
    "es2021": true
  },
  "settings": {
    "react": {
      "version": "latest"
    }
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
